@import 'nib/vendor'
@import 'nib/gradients'
@import 'normalize'
@import 'flex'

vendor-prefixes = o ms webkit moz khtml

azul = #4981FF
azulClaro = #88ACFF
azulMuyClaro = #BED8FF
azulOscuro = #24407F
azulMuyOscuro = #26417F
azulMuyOscuroX = #0D237F
mamey = #FF5A13
amarillo = #FFF676

body
	font-family "Arial", sans-serif, "serif"
	font-size 14px
	
footer
	background verdeMuyOscuro
	color white
	border-top 1.5px solid verdeSubMenu
	bottom 0
	left 0
	right 0
	height 3em
	position absolute

.imgHome-content
	margin 4em auto
	text-align center
	
.imgHome
	width 50%
	border-radius 50%
	opacity .02

.header
	background azulMuyClaro
	display block
	color azulMuyOscuroX
	overflow hidden
	padding 0
	position relative
	border-bottom 1px solid azulOscuro
	box-shadow 1px 1px 1px 1px azulOscuro
	
.content-logo
	float left
	margin 0 0 0 .5em
	padding 0
	& a
		outline none

.logo
	margin .3rem 0 .1rem .2rem
	width 75px
	border-radius 50%

.content-title
	display inline-block
	margin .5rem 0 0 .4rem
	
&.titleCepas
	font-size 1rem
	font-weight bold
	margin .9rem 0 0 .2rem
	&.titleCepas2
		margin 0 0 0 .2rem

.usuario
	float right
	margin 0 .4em .2em 0
	bottom 0
	right 0
	position absolute
	text-decoration none
	color azulMuyOscuroX
	
	&:before
		font-size 2em
		color azulMuyOscuroX
		
.menu
	display flex
	justify-content flex-end
	background azulMuyOscuroX
	a 
		text-decoration none
		background azulMuyOscuroX
		padding 1em 2em
		color white
		transition .3s
		&:hover
			background azulMuyClaro
			color azulMuyOscuroX
	li
		list-style none
		padding .5em
		
		
//CLASES GENERICAS

.Boton-azul //CLASE para darle formato a los botones
	background #2665CC
	border 0
	border-bottom .1rem solid #0E0E95
	border-radius 2px 2px 3px 3px
	color white
	height 2.2em
	transition .1s
	outline none
	
	&:hover
		opacity .87
		// background brown
		// border-bottom .1rem solid yellow
		// color white
		
.Boton-disabled //CLASE para darle apariencia deshabilitado a botones
	background lightgray !important
	border 0 !important
	border-bottom .3rem solid gray !important
	border-radius 3px 3px 3px 3px !important
	color black !important
	height 2.2em
	transition .1s !important
	outline none !important


//FIN CLASES GENERICAS
